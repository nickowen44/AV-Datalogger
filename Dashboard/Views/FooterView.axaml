<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="100"
             xmlns:vm="clr-namespace:Dashboard.ViewModels"
             x:Class="Dashboard.Views.FooterView"
             x:DataType="vm:FooterViewModel"
             Background="#ff2b2b2b"
             Foreground="White">
    <UserControl.Styles>
        <!-- Style to remove Avalonia's default hover and selected effects for Textboxes -->
        <Style Selector="TextBox">
            <Style Selector="^:focus">
                <Setter Property="BorderBrush" Value="Red"/>
                        <Style Selector="^ /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Style>
            <Style Selector="^:pointerover">
                <Setter Property="BorderBrush" Value="Red"/>
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="1" />
                </Style>
            </Style>
        </Style>
    </UserControl.Styles>
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:FooterViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="0.2*,0.2*, 0.6*" ShowGridLines="True">
        <Grid Grid.Column="0">
            <StackPanel VerticalAlignment="Center">
            <TextBlock Name="CarId" Text="{Binding CarId, StringFormat='Car ID: {0}'}"/>
            <TextBlock Name="CurTime" Text="{Binding UTcTime, StringFormat='UTC Time: {0}'}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Grid.RowDefinitions="0.5*,0.5*" Grid.ColumnDefinitions="0.5*,0.5*" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Ellipse Name="ConnectionIndicator" Grid.Column="0" Grid.Row="0" Stroke="Black" StrokeThickness="3"
                         Fill="Green" Width="20" Height="20"
                         HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Name="Test" Text="Connection" HorizontalAlignment="Left"/>
                <Ellipse Name="HeartBeat" Grid.Column="0" Grid.Row="1"  Stroke="Black" StrokeThickness="3"
                         Fill="Orange" Width="20" Height="20"
                         HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Name="Test2" Text="Heart Beat" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Column="2"  VerticalAlignment="Center">
            <TextBox Name="ConsoleTextBox"
                     Height="80" 
                     Margin="10,40,10,40" 
                     AcceptsReturn="True" 
                     Background="White"
                     Foreground="Black"
                     FontSize="10"
                     TextWrapping="Wrap"
                     IsReadOnly="True">
            </TextBox>
        </Grid>
    </Grid>
    
</UserControl>
