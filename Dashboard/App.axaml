<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Dashboard.App"
             xmlns:local="using:Dashboard"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <!-- Global colours -->
    <Application.Resources>
        <Color x:Key="AccentColour">LightGray</Color>
        <Color x:Key="AccentBorderColour">DimGray</Color>
        <!-- This can also be used for light text -->
        <Color x:Key="ForegroundColour">#F2D398</Color>
        <Color x:Key="ForegroundBorderColour">#8B6220</Color>
        <!-- This can also be used for dark text -->
        <Color x:Key="BackgroundColour">#14080E</Color>
        <Color x:Key="NavigationColour">#ff2b2b2b</Color>
        <SolidColorBrush x:Key="GoldColour" Color="#8B6220" />
        <SolidColorBrush x:Key="PlumColour" Color="#14080E" />
        <SolidColorBrush x:Key="GrayColour" Color="DimGray" />
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>